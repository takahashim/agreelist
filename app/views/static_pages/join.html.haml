.jumbotron
  .text-center
    %h4 Leave your email to know when someone agrees/disagrees:
    = form_for @individual, url: { action: :save_email, controller: :individuals }, method: :post do |f|
      .form-group
        .col-sm-2
        .col-sm-8
          = f.text_field :email, placeholder: "your@email.com", size: 30, class: "form-control"
          %br
          %br
          = hidden_field :back, params[:back]
          = f.submit "Next", class: "btn btn-primary"
          or
          = link_to "skip", params[:back] ? Statement.find_by_hashed_id(params[:back]) : "/"
        .col-sm-2
        %br
        %br
