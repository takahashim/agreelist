%nav.navbar.navbar-fixed-top.navbar-inverse
  .container-fluid
    .navbar-inner
      %button{type: "button", class: "navbar-toggle collapsed", "data-toggle" => "collapse", "data-target" => "#navbar-collapse"}
        %span{class: "sr-only"}
        %span{class: "icon-bar"}
        %span{class: "icon-bar"}
        %span{class: "icon-bar"}
      #logo-and-subtitle
        #logo-div
          = link_to "AgreeList", root_path, id: "logo"
        %span#logo-subtitle Tracking influencers' opinions
      .collapse.navbar-collapse#navbar-collapse
        %ul.nav.navbar-nav.pull-right
          %li= link_to "Sign in", login_path unless current_user
          %li= link_to "#{current_user.visible_name} (#{current_user.karma})", "/#{current_user.to_param}" if current_user
          %li= link_to "About", "/#about"
          %li= link_to "Contact", contact_path
          %li= link_to "Sign Out", signout_path if current_user
          %a{href: "#", class: "dropdown-toggle", "data-toggle" => "dropdown", role: "button", "aria-expanded" => "false"}
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.pull-right
